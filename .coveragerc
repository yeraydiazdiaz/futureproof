[run]
branch = True
source =
    futureproof

[paths]
source =
   src/futureproof
   .tox/*/lib/python*/site-packages/futureproof
   .tox/pypy/site-packages/futureproof

[report]
exclude_lines =
    if self.debug:
    pragma: no cover
    raise NotImplementedError
    if __name__ == .__main__.:
ignore_errors = True
omit =
    tests/*
show_missing = True
